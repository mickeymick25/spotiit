
    <div>
        <p> 
            Titre: 
            <%= ad.classifiedad.title %>
        </p>
        <p>
            Secteur: 
            <%= ad.classifiedad.sector %>
        </p>
        <p>
            Statut: 
            <%= ad.classifiedad.adstatus %>
        </p>
        <p>
            Récompense : 
        </p>
        <% ad.classifiedad.rewards.each do |reward| %>
            <p>Pourcentage du buget :</p>
            <div><%= reward.percent %></div>
            <p>Montant de la Récompense:</p>
            <div><%=reward.amount %></div>
        <% end %>
        <p> 
            Petite description : 
            <%= ad.classifiedad.short_description %>
        </p>
    </div>
    <% if !ad.classifiedad.localisation.nil? %>
        <div>
            <p>Localisation du Bien</p>
            <p>
                Quartier: 
                <%= ad.classifiedad.localisation.district %>
            </p>
            <p>
                Adresse: 
                <%= ad.classifiedad.localisation.street %>
            </p>
            <p>
                Département: 
                <%= ad.classifiedad.localisation.dept %>
            </p>
            <p>
                Ville: 
                <%= ad.classifiedad.localisation.city %>
            </p>
            <p>
                Région: 
                <%= ad.classifiedad.localisation.region %>
            </p>
        </div> 
    <% end %>
    <div>
    Images: 
        <% ad.classifiedad.propertyphotos.each do |photo| %>
            <div style="width:300">
                <%= photo.title %>
                <div><%= photo.type.typeName %></div>
                <%= photo.comment %>
                <% if photo.image_url %>
                    <%= image_tag photo.image_url, style:' height:200px' %>
                <% end %>
            </div>
        <% end %>
    </div>