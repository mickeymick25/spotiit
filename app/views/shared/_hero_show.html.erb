<%= render "shared/nav_hero" %>
<div class="relative bg-white overflow-hidden">
  <!-- This example requires Tailwind CSS v2.0+ -->
    <div class="max-w-7xl mx-auto">
      <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-100px lg:pb-28 xl:pb-20">
        <svg class="hidden lg:block absolute right-0 inset-y-0 h-full w-48 text-white transform translate-x-1/2" fill="currentColor" viewBox="0 0 100 100" preserveAspectRatio="none" aria-hidden="true">
          <polygon points="50,0 100,0 50,100 0,100" />
        </svg>
        <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-7 xl:mt-32 ">
          <div class="sm:text-center lg:text-left">
            <h1 class="text-2xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-5xl mt-10 pt-5">
              <span class="block xl:inline"><%= get_property_action(classifiedad) %></span>
              <span class="block text-indigo-600 xl:inline"><%= get_property_types(classifiedad) %></span><br>
              <span class="block xl:inline ">Budget max</span>
              <span class="block text-indigo-600 xl:inline">
                <% if classifiedad.propertyad.present?%>
                    <%= number_to_currency( classifiedad.propertyad.netprice, locale: :fr, precision: 0) %>
                <% else %>
                    <%= number_to_currency( classifiedad.propertybuyad.budget, locale: :fr, precision: 0) %>
                <% end %>
              </span>
            </h1>
          <div class=" flex flex-row mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-10 md:text-2xl lg:mx-0">
            <div class="mr-2 pt-1"><img src="/images/pin_location.png" class="w-5" ></div>
            <div>Villiers sur Marne 94350</div>
          </div>
          <div class="mt-3 text-base sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-10 md:text-xl lg:mx-0">
              <div class="flex flex-wrap w-72 h-20 rounded-full border-2 border-yellow-500 pr-16 pl-6 pt-3">
                  <div class="pt-2"><img src="/images/recompense.png" ></div>
                  <div class="ml-5">
                    <div class="text-sm">Récompense jusqu'à</div>
                    <div class="text-2xl font-semibold text-yellow-500 "><%= number_to_currency(classifiedad.rewards[0].amount.to_i, locale: :fr, precision: 0) %></div>
                  </div>                  
              </div>
          </div>
          <div class="mt-10 sm:mt-10 sm:flex sm:justify-center lg:justify-start">
            <div class="rounded-md shadow">
              <a href="#" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10">
                Je connais quelqu'un
              </a>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

    <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
      <img class="h-56 w-full object-cover sm:h-72 md:h-96 lg:w-full lg:h-full" src="https://source.unsplash.com/collection/3699981" alt="" />
    </div>

    <div class="absolute flex rounded-xl bottom-8 right-8 px-4 py-2">
      <img src="https://source.unsplash.com/collection/580685" class="flex-shrink-0 w-12 h-12 rounded-full object-cover" />
      <div class="flex-1 bg-black bg-opacity-30 rounded-full ml-2 px-8 py-4 text-sm">
        <p class="font-semibold leading-none text-white">Jeff</p>
      </div>
    </div>

</div>
