 <%= f.fields_for :classifiedad   do |classifiedad_form| %>
    <%= display_errors_for(classifiedad_form.object) %>
    <div>
        <%= classifiedad_form.hidden_field :id %>

        <h2>Récompenses</h2>
        <%= classifiedad_form.radio_button :fixedreward, true, checked: true , data:{behavior:"showfixed"} %>  Récompense fixe
        <%= classifiedad_form.radio_button :fixedreward, false , data:{behavior:"showpercent"} %> Pourcentage du prix du bien
        <h3>Je veux bénéfier du réseaux des Helpers Professionnels</h3>

        <div id="div_rewardPro">
            <label>Récompense fixe </label>
            <%= classifiedad_form.text_field (:rewardPro), class:"input" %>
        </div>
        <div  id="div_rewardProPercent" style="display:none" >
            <label>Récompense en % du prix du bien</label>
            <%= classifiedad_form.text_field  :rewardProPercent , class:"input" %>
        </div>
      
        <h3>Je veux bénéfier du réseaux des Helpers Particulier</h3>
            
        <div id="div_rewardInd">
            <label>Récompense fixe </label>
            <%= classifiedad_form.text_field (:rewardInd), class:"input" %>
        </div>
        <div  id="div_rewardIndPercent" style="display:none">
            <label>Récompense en % du prix du bien</label>
            <%= classifiedad_form.text_field  :rewardIndPercent, class:"input" %>
        </div>
        <div>
            <label>Courte description</label>
            <%= classifiedad_form.text_field (:short_description), class:"input" %>
        </div>
    </div>
    <div>
        <h2>Où Souhaitez vous que le bien se situe?</h2>
        
    </div>        
    <%= classifiedad_form.fields_for :localisation do |localisation_form| %>
        <div>
            <%= classifiedad_form.hidden_field :id %>
            <div>
                <label>Quartier</label>
                <%= localisation_form.text_field (:district), class:"input" %>
            </div>
            <div>
                <label>Adresse</label>
                <%= localisation_form.text_field (:street), class:"input" %>
            </div>
            <div>
                <label>Ville</label>
                <%= localisation_form.text_field (:city), class:"input" %>
            </div>
            <div>
                <label>Département</label>
                <%= localisation_form.text_field (:dept), class:"input" %>
            </div>
            <div>
                <label>Région</label>
                <%= localisation_form.text_field (:region), class:"input" %>
            </div>
        </div>
    <% end %>
    <div>
        <%= classifiedad_form.fields_for :propertyphotos , html: { enctype: "multipart/form-data" }  do |f| %>
            <% render partial:"shared/propertyphoto_fields", locals: {f: f} %>
        <% end %>
        <%= link_to_add_fields2 "Nouvelle photo", classifiedad_form, :propertyphotos, partial:"shared/propertyphoto_fields" %>
    </div>
<% end %>