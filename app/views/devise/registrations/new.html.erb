<section class="flex flex-col md:flex-row h-screen items-center">
  <div class="bg-indigo-100 hidden lg:block w-full md:w-1/2 xl:w-2/3 h-screen">
    <img src="https://source.unsplash.com/collection/3699613" alt="" class="w-full h-full object-cover">
  </div>

  <div class="w-full md:max-w-md lg:max-w-full md:mx-auto md:mx-0 md:w-1/2 xl:w-1/3 h-screen px-6 lg:px-16 xl:px-12 flex items-center justify-center">
    <div class="w-full h-100 ">

      <%= link_to "back", root_path, class: "inline-flex w-full px-5 py-3 sm:w-auto sm:inline-flex items-center justify-center text-base font-medium text-indigo-600 bg-gray-50 hover:bg-gray-100", key:"item.name" %>

      <% content_for :devise_form do %>
        <h1 class="text-xl md:text-2xl font-bold leading-tight my-10">Sign up your account</h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="flex justify-between gap-3">
            <div class="w-1/2 input-group">
              <%= f.label :first_name, class:"label block text-gray-700" %>
              <%= f.text_field :first_name, placeholder:"Your first name", autofocus:"true",class:"input w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" %>
            </div>

            <div class="w-1/2 input-group">
              <%= f.label :last_name, class:"label block text-gray-700" %>
              <%= f.text_field :last_name, placeholder:"Your first name", class:"input w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" %>
            </div>
          </div>

          <div class="input-group">
            <%= f.label :email, class:"label block text-gray-700" %>
            <%= f.email_field :email, placeholder:"Enter Email Address", autocomplete: "email", class:"input w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" %>
          </div>

          <div class="input-group">
            <div class="flex">
              <%= f.label :password, class: "label" %>
              <% if @minimum_password_length %>
                <span class="pl-1 text-xs text-grey-dark"><em>(<%= @minimum_password_length %> characters minimum)</em></span>
              <% end %>
            </div>
            <%= f.password_field :password, placeholder:"Enter Password", autocomplete: "new-password", class: "input w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" %>
          </div>

          <div class="input-group">
            <%= f.label :password_confirmation, class:"label" %>
            <%= f.password_field :password_confirmation, placeholder:"Confirm Password", autocomplete: "new-password", class: "input w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" %>
          </div>

          <div class="input-group">
            <%= f.submit "Sign up", class: "btn btn-spotiit" %>
          </div>

        <% end %>
        <%= render "devise/shared/links" %>

      <% end %>

      <%= render "devise/shared/form_wrap" %>

      <hr class="my-6 border-gray-300 w-full">

      <button type="button" class="w-full block bg-white hover:bg-gray-100 focus:bg-gray-100 text-gray-900 font-semibold rounded-lg px-4 py-3 border border-gray-300">
        <div class="flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" class="w-6 h-6" viewBox="0 0 48 48"><defs><path id="a" d="M44.5 20H24v8.5h11.8C34.7 33.9 30.1 37 24 37c-7.2 0-13-5.8-13-13s5.8-13 13-13c3.1 0 5.9 1.1 8.1 2.9l6.4-6.4C34.6 4.1 29.6 2 24 2 11.8 2 2 11.8 2 24s9.8 22 22 22c11 0 21-8 21-22 0-1.3-.2-2.7-.5-4z"/></defs><clipPath id="b"><use xlink:href="#a" overflow="visible"/></clipPath><path clip-path="url(#b)" fill="#FBBC05" d="M0 37V11l17 13z"/><path clip-path="url(#b)" fill="#EA4335" d="M0 11l17 13 7-6.1L48 14V0H0z"/><path clip-path="url(#b)" fill="#34A853" d="M0 37l30-23 7.9 1L48 0v48H0z"/><path clip-path="url(#b)" fill="#4285F4" d="M48 48L17 24l-4-3 35-10z"/></svg>
          <span class="ml-4">Sign up with Google</span>
        </div>
      </button>
      <p class="mt-8">
        <%#= link_to "Already registered?", new_user_session_path, class: "text-blue-500 hover:text-blue-700 font-semibold", key:"item.name" %>
      </p>

    </div>
  </div>
</section>
